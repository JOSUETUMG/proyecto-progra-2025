<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoF.Views.LogInPage"
             Title="Iniciar Sesión"
             BackgroundColor="#F5F5F5">

    <VerticalStackLayout Padding="40" Spacing="25" VerticalOptions="Center">
        <Button Text="← Volver" 
            FontSize="18" 
            CornerRadius="12" 
            HeightRequest="45" 
            WidthRequest="250" 
            BackgroundColor="#FF9800"
            TextColor="White"
            Clicked="OnBackClicked"/>
        
        <Label Text="Ingrese sus credenciales"
               FontSize="22"
               FontAttributes="Bold"
               TextColor="#333"
               HorizontalOptions="Center"/>

        <Entry x:Name="usuarioEntry"
               Placeholder="Correo electrónico"
               Keyboard="Email"
               BackgroundColor="White"
               TextColor="#333"
               HeightRequest="45"
               WidthRequest="250"
               Margin="0,10"
               HorizontalOptions="Center"/>

        <Entry x:Name="contrasenaEntry"
               Placeholder="Contraseña"
               IsPassword="True"
               BackgroundColor="White"
               TextColor="#333"
               HeightRequest="45"
               WidthRequest="250"
               Margin="0,10"
               HorizontalOptions="Center"/>

        <Button Text="Iniciar Sesión"
                FontSize="18"
                CornerRadius="12"
                HeightRequest="45"
                WidthRequest="250"
                BackgroundColor="#007BFF"
                TextColor="White"
                Clicked="OnLoginClicked"/>

        <Button Text="Registrar Usuario"
                FontSize="18"
                CornerRadius="12"
                HeightRequest="45"
                WidthRequest="250"
                BackgroundColor="#28A745"
                TextColor="White"
                Clicked="OnRegisterClicked"/>
    </VerticalStackLayout>
</ContentPage>