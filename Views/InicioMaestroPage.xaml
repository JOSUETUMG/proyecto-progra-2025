<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoF.Views.InicioMaestroPage"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto, *" ColumnDefinitions="*">
        <Label Text="Bienvenido + Nombre del Maestro"
               FontSize="26" FontAttributes="Bold" TextColor="#333"
               HorizontalOptions="Center" VerticalOptions="Start"
               Grid.Row="0" Margin="0, 20, 0, 0"/>

        <VerticalStackLayout Padding="0" Spacing="0"
                             Grid.Row="1"
                             VerticalOptions="Center" HorizontalOptions="Center">

            <Label Text="¿Qué deseas hacer?"
                   FontSize="25" FontAttributes="Bold" TextColor="#555"
                   HorizontalOptions="Center" Margin="0, 0, 0, 20"/>

            <Button Text="Crear sala por temas"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    WidthRequest="250"
                    Margin="0, 20, 0, 0"
                    Clicked="SalaPorTemasClick"/>

            <Button Text="Crear sala a partir de documento"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    WidthRequest="250"
                    Margin="0, 20, 0, 0"
                    Clicked="SalaAPartirDeDocumentosClick"/>

        </VerticalStackLayout>
    </Grid>

</ContentPage>